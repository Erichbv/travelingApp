<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondaryBackgroud"
    android:padding="16dp">

    <!-- TÃ­tulo de bienvenida -->
    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, Viajero ðŸ‘‹"
        android:textSize="22sp"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Chips horizontales -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos"
                android:backgroundTint="@color/chipSelected"
                android:textColor="@color/chipText"
                android:layout_marginEnd="8dp"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBeaches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playa"
                android:textColor="@color/chipText"
                android:layout_marginEnd="8dp"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAdventure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aventura"
                android:textColor="@color/chipText"
                android:layout_marginEnd="8dp"
                />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Lista de destinos turÃ­sticos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDestinations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        />

</LinearLayout>
